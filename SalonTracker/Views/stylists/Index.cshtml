
@using SalonTracker.Models;
@model List<SalonTracker.Models.stylists>;

<h1>Stylists</h1>
<hr/>

@if (@Model.Count == 0)
{
  <h3>No Stylists </h3>
}

@foreach (stylists stylist in Model)
{
  <!-- <h3>@stylist.stylistsId</h3> -->
  <h3>@Html.ActionLink($"{@stylist.stylistName}", "Details", new {id = stylist.stylistsId}) </h3>
}